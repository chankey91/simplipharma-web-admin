rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY OPEN RULES - FOR DEVELOPMENT/TESTING ONLY
    // ⚠️ WARNING: These rules allow all authenticated users full access
    // ⚠️ Use only for initial setup, then switch to firestore.rules
    
    match /{document=**} {
      // Allow any authenticated user to read/write everything
      allow read, write: if request.auth != null;
    }
  }
}

